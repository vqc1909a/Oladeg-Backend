        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "Contenido": {
      "type": "richtext",
      "required": true
    },
    "Libro": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files"
      ],
      "plugin": "upload",
      "required": true
    },
    "Url": {
      "type": "uid",
      "targetField": "Titulo",
      "required": true
    }
  }
}
